<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <android.support.constraint.ConstraintLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_above="@+id/dot">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Username"
            android:textColor="#000000"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Status :"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/username"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/strength"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Strength"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/status"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/agility"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Creativity"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/strength"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/intelligence"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Intelligence"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/agility"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=":"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/strength"
            app:layout_constraintTop_toBottomOf="@+id/status"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/agi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=":"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/agility"
            app:layout_constraintTop_toBottomOf="@id/strength"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/intel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text=":"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/intelligence"
            app:layout_constraintTop_toBottomOf="@+id/agility"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/str_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/str"
            app:layout_constraintTop_toBottomOf="@+id/status"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/agi_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/agi"
            app:layout_constraintTop_toBottomOf="@id/strength"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/intel_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@+id/intel"
            app:layout_constraintTop_toBottomOf="@+id/agility"
            tools:layout_editor_absoluteX="0dp" />


    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/dot">


        <TextView
            android:id="@+id/task_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Task's Name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/desc_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/task_name_view" />

        <TextView
            android:id="@+id/desc_input_view"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/desc_view" />

        <TextView
            android:id="@+id/diff_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Difficulty"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/desc_input_view" />

        <TextView
            android:id="@+id/diff_input_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/diff_view"
            app:layout_constraintTop_toBottomOf="@id/desc_input_view" />

        <TextView
            android:id="@+id/type_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/diff_view" />

        <TextView
            android:id="@+id/type_input_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/type_view"
            app:layout_constraintTop_toBottomOf="@id/diff_input_view" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Date"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/type_view" />

        <TextView
            android:id="@+id/date_input_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/date_view"
            app:layout_constraintTop_toBottomOf="@id/type_input_view" />

        <TextView
            android:id="@+id/date_time_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Time"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/date_view" />

        <TextView
            android:id="@+id/date_time_input_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/date_time_view"
            app:layout_constraintTop_toBottomOf="@id/date_input_view" />

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>