<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border"
    android:padding="10dp">
    <TextView
        android:textColor="#000000"
        android:id="@+id/task_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task's Name"
        android:padding="10dp"
        android:textSize="20dp"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/desc_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/task_name_view"
        android:padding="5dp"
        android:textSize="20dp"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/desc_input_view"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/desc_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/diff_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        app:layout_constraintTop_toBottomOf="@id/desc_input_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/diff_input_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/desc_input_view"
        app:layout_constraintLeft_toRightOf="@id/diff_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/type_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Type"
        app:layout_constraintTop_toBottomOf="@id/diff_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/type_input_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/diff_input_view"
        app:layout_constraintLeft_toRightOf="@id/type_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/date_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Due Date"
        app:layout_constraintTop_toBottomOf="@id/type_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/date_input_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/type_input_view"
        app:layout_constraintLeft_toRightOf="@id/date_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/date_time_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Due Time"
        app:layout_constraintTop_toBottomOf="@id/date_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/date_time_input_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/date_input_view"
        app:layout_constraintLeft_toRightOf="@id/date_time_view"
        android:padding="5dp"
        android:textSize="20dp"/>

    <!--
    <Button
        android:id="@+id/apply_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        app:layout_constraintTop_toBottomOf="@id/date_time_view"
        app:layout_constraintRight_toRightOf="@id/date_time_input_view"/>
     -->


</android.support.constraint.ConstraintLayout>