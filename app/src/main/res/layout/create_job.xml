<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/border"
        android:padding="20dp">

        <EditText
            android:id="@+id/job_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Job's Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/desc_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/job_name" />

        <EditText
            android:id="@+id/desc_input_job"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Insert Description"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/desc_job" />

        <TextView
            android:id="@+id/slot_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Worker Slot"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/desc_input_job" />

        <TextView
            android:id="@+id/slot_input_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="1-10"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/slot_job"
            android:layout_below="@id/desc_input_job" />


        <TextView
            android:id="@+id/date_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Date"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/slot_job" />

        <TextView
            android:id="@+id/date_input_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Insert Date"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/date_job"
            android:layout_below="@id/slot_input_job" />

        <TextView
            android:id="@+id/date_time_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Time"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/date_job" />

        <TextView
            android:id="@+id/date_time_input_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Insert Time"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/date_time_job"
            android:layout_below="@id/date_input_job" />

        <Button
            android:id="@+id/crt_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:text="Create"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</ScrollView>