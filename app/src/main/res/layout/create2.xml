<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="#000000"
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task's Name"
        android:padding="10dp"
        android:textSize="20dp"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/desc_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Description"
        app:layout_constraintTop_toBottomOf="@id/task_name"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/desc_input_task"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/desc_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/diff_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        app:layout_constraintTop_toBottomOf="@id/desc_input_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/diff_input_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/desc_input_task"
        app:layout_constraintLeft_toRightOf="@id/diff_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/type_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Type"
        app:layout_constraintTop_toBottomOf="@id/diff_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/type_input_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/diff_input_task"
        app:layout_constraintLeft_toRightOf="@id/type_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/date_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Due Date"
        app:layout_constraintTop_toBottomOf="@id/type_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/date_input_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/type_input_task"
        app:layout_constraintLeft_toRightOf="@id/date_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/worker_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="worker"
        app:layout_constraintTop_toBottomOf="@id/date_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <TextView
        android:textColor="#000000"
        android:id="@+id/worker_input_task"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="###"
        app:layout_constraintTop_toBottomOf="@id/date_input_task"
        app:layout_constraintLeft_toRightOf="@id/date_task"
        android:padding="5dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/crt_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="Create Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</android.support.constraint.ConstraintLayout>