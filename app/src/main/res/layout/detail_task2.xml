<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/task_name_view"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Task's Name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/desc_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/task_name_view" />

        <TextView
            android:id="@+id/desc_input_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_below="@+id/desc_view" />

        <TextView
            android:id="@+id/diff_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Difficulty"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/desc_input_view" />

        <TextView
            android:id="@+id/diff_input_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="20dp"
            android:layout_toRightOf="@id/diff_view"
            android:layout_below="@+id/desc_input_view" />

        <TextView
            android:id="@+id/type_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/diff_view" />

        <TextView
            android:id="@+id/type_input_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="20dp"
            android:layout_toRightOf="@id/type_view"
            android:layout_below="@+id/diff_view" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Date"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/type_view"/>

        <TextView
            android:id="@+id/date_input_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="20dp"
            android:layout_toRightOf="@id/date_view"
            android:layout_below="@+id/type_input_view"/>

        <TextView
            android:id="@+id/date_time_view"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Time"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/date_view" />

        <TextView
            android:id="@+id/date_time_input_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="20dp"
            android:layout_toRightOf="@id/date_time_view"
            android:layout_below="@+id/date_input_view" />

    </RelativeLayout>



    <!--
    <Button
        android:id="@detail_tasktask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        app:layout_constraintTop_toBottomOf="@id/date_time_view"
        app:layout_constraintRight_toRightOf="@id/date_time_input_view"/>
     -->


</android.support.v7.widget.CardView>