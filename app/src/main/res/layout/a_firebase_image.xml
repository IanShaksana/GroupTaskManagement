<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/click_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click me" />

    <EditText
        android:id="@+id/image_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/click_me"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/click_me"
        android:hint="image name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="click me" />

    <ProgressBar
        android:id="@+id/progbar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/shupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/upload"
        android:layout_alignBottom="@+id/upload"
        android:layout_alignParentEnd="true"
        android:text="show" />

    <ImageView
        android:id="@+id/pickedimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/progbar"
        android:layout_below="@id/image_name"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>