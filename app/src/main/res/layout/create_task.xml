<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginBottom="151dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/border"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/task_name2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Task's Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/desc_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/task_name2" />

        <EditText
            android:id="@+id/desc_input_task2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Insert Description"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/desc_task2" />

        <TextView
            android:id="@+id/diff_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Difficulty"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/desc_input_task2" />

        <TextView
            android:id="@+id/diff_input_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="1-3"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/diff_task2"
            app:layout_constraintTop_toBottomOf="@id/desc_input_task2" />

        <TextView
            android:id="@+id/type_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/diff_task2" />

        <TextView
            android:id="@+id/type_input_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="eg: Str, Dex, Int"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/type_task2"
            app:layout_constraintTop_toBottomOf="@id/diff_input_task2" />

        <TextView
            android:id="@+id/date_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Date"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/type_task2" />

        <TextView
            android:id="@+id/date_input_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/date_task2"
            app:layout_constraintTop_toBottomOf="@id/type_input_task2" />

        <TextView
            android:id="@+id/date_time_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Time"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/date_task2" />

        <TextView
            android:id="@+id/date_time_input_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/date_time_task2"
            app:layout_constraintTop_toBottomOf="@id/date_input_task2" />

        <Button
            android:id="@+id/crt_task2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:text="Apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>


