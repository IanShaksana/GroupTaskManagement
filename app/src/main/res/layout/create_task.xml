<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="20dp">

        <EditText
            android:id="@+id/task_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task's Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/desc_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/task_name2" />

        <EditText
            android:id="@+id/desc_input_task2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Insert Description"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/desc_task2" />

        <TextView
            android:id="@+id/diff_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Difficulty"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/desc_input_task2" />

        <TextView
            android:id="@+id/diff_input_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="1-3"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/diff_task2"
            android:layout_below="@id/desc_input_task2" />

        <TextView
            android:id="@+id/type_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/diff_task2" />

        <TextView
            android:id="@+id/type_input_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="eg: Str, Dex, Int"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/type_task2"
            android:layout_below="@id/diff_input_task2" />

        <TextView
            android:id="@+id/date_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Date"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/type_task2" />

        <TextView
            android:id="@+id/date_input_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Insert Date"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/date_task2"
            android:layout_below="@id/type_input_task2" />

        <TextView
            android:id="@+id/date_time_task2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Due Time"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@id/date_task2" />

        <TextView
            android:id="@+id/date_time_input_task2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Insert Time"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toRightOf="@id/date_time_task2"
            android:layout_below="@id/date_input_task2" />

        <TextView
            android:id="@+id/job_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job's Due Date"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:textSize="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/date_time_task2" />

        <TextView
            android:id="@+id/job_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/job_date"
            android:layout_centerHorizontal="true"
            android:text="###"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/crt_task2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:text="Apply"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/job_due_date" />


    </RelativeLayout>


</ScrollView>


