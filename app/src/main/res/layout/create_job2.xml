<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginBottom="121dp"
        android:layout_marginTop="138dp"
        android:background="@drawable/border"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/job_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Job's Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desc_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/job_name" />

        <EditText
            android:id="@+id/desc_input_job"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Insert Description"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/desc_job" />

        <TextView
            android:id="@+id/slot_job"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Worker Slot"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/desc_input_job" />

        <TextView
            android:id="@+id/slot_input_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="1-10"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/slot_job"
            app:layout_constraintTop_toBottomOf="@id/desc_input_job" />


        <TextView
            android:id="@+id/date_job"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Time length (day)"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/slot_job" />

        <TextView
            android:id="@+id/date_input_job"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Insert Days"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/date_job"
            app:layout_constraintTop_toBottomOf="@id/slot_input_job" />


        <Button
            android:id="@+id/crt_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="116dp"
            android:text="Create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>